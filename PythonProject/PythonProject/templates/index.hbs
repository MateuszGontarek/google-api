{% extends 'base.hbs' %}

{% block head %}
<title>TO DO LIST</title>
{% endblock %}

{% block body %}
<div class="content">
    <h1>Wprowadź spółrzędne</h1>
    <table>
        <tr>
            <th>Nazwa</th>
            <th>Długość geograficzna</th>
            <th>Szerokość geograficzna</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.dlugosc }}</td>
                <td>{{ task.szerokosc}}</td>
            </tr>
        {% endfor %}
    </table>
    <div class="form">
        <form action="/" method="POST">
            <input type="text" name="name" id="name" placeholder="Podaj Nazwe Lokalizacji" >
            <input type="number" step="0.00001" name="dlugosc" id="dlugosc"  placeholder="Wprowadź długość">
            <input type="number" step="0.00001" name="szerokosc" id="szerokosc"  placeholder="Wprowadź szerokość">
            <input type="submit" name="submit" value="Wyślij">
        </form>
    </div>
    <div class="submit">
        <a href="result" id="submit" class="submit" method="POST"> >Zatwierdź</a>
    </div>
</div>
{% endblock %}
